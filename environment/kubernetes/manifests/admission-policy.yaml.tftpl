apiVersion: admissionregistration.k8s.io/v1
kind: ValidatingAdmissionPolicy
metadata:
  name: ${node_provider_name}-hostnetwork-allowed
spec:
  failurePolicy: Fail
  matchConstraints:
    resourceRules:
      - apiGroups: [""]
        apiVersions: ["v1"]
        operations: ["CREATE","UPDATE"]
        resources: ["pods"]
  validations:
    - expression: |
        request.namespace in ['kube-system','kube-flannel']
        || !(has(object.spec.hostNetwork) && object.spec.hostNetwork == true)
      message: "hostNetwork is allowed only in kube-system and kube-flannel."
---
apiVersion: admissionregistration.k8s.io/v1
kind: ValidatingAdmissionPolicyBinding
metadata:
  name: ${node_provider_name}-hostnetwork-allowed
spec:
  policyName: ${node_provider_name}-hostnetwork-allowed
  validationActions: ["Deny"]
